<% content_for :guide do %>
  <div class="container history-pages">
    <%= render partial: 'shared/overview' if current_user %>
    <div class="row">
      <div class="flex-box horizontal profile-body">
        <!-- profile-sidebar -->
        <div class="flex-content">
          <%= render 'tabs', active: :order %>
          <div class="profile-tabs-content">
          <table class="data-table text-center">
            <thead>
              <tr>
                <th><%= t('.id') %></th>
                <th><%= t('.type') %></th>
                <th><%= t('.state') %></th>
                <th><%= t('.market') %></th>
                <th><%= t('.price') %></th>
                <th><%= t('.volume') %></th>
                <th><%= t('.average_price') %></th>
                <th><%= t('.fulfilled_volume') %></th>
                <th><%= t('.timestamp') %></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'order', collection: @orders %>
            </tbody>
          </table>
          <div class="float-right">
            <%= paginate @orders %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>
