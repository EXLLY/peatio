<% content_for :guide do %>
  <div class="container history-pages">
    <%= render partial: 'shared/overview' if current_user %>
    <div class="row">
      <div class="flex-box horizontal profile-body">
        <!-- profile-sidebar -->
        <div class="flex-content">
          <%= render 'tabs', active: :trade %>
          <div class="profile-tabs-content">
            <table class="data-table text-center">
              <thead>
                <tr>
                  <th><%= t('.side') %></th>
                  <th><%= t('.created_at') %></th>
                  <th><%= t('.display_currency') %></th>
                  <th><%= t('.base_amount') %></th>
                  <th><%= t('.quote_currency') %></th>
                  <th><%= t('.quote_amount') %></th>
                  <th><%= t('.price') %></th>
                </tr>
              </thead>
              <tbody class="list">
                <%= render partial: 'trade', collection: @trades %>
              </tbody>
            </table>
          <div class="float-right">
            <%= paginate @trades %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
